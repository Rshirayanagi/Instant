<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <div class="header">
    <p><%= notice %></p>
    <h1>Instant一覧</h1>
      <%= link_to "Instantの新規投稿", new_picture_path, class: 'btn btn-default' %>
    </div>
    <% @pictures.each do |picture| %>
    <div class="row">
      <p><%= profile_img(picture.user) %><%= picture.user.name %>が投稿しました。</p>
      <h4><strong><%= picture.title %></strong></h4>
      <p><%= picture.content %></p>
      <p class="post-image">
      <%= image_tag(picture.image) %>
      </p>

      <%= link_to "編集する", edit_picture_path(picture.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "削除する", picture_path(picture.id), data: { confirm: '削除していいですか？', method: :delete }, class: 'btn btn-default btn-sm btn-danger' %>
    </div>
    <% end %>
  </div>
</div>
<div id="page-top-btn" class="page-top-btn">
  <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
