<!DOCTYPE html>
<html>
<head>
  <title>Instant</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css?family=Indie+Flower|Lobster" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed" rel="stylesheet">
</head>
<body>

  <div id="header-nav">
    <header>
      <h1><%= link_to "Instant", root_path %></h1>
    </header>
    <nav>
      <Ul>
        <li><%= link_to "新規投稿", new_picture_path %></li>
        <li><%= link_to "Instant一覧", pictures_path %></li>
        <% if user_signed_in? %>
        <li><%= link_to 'マイページ', edit_user_registration_path %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
        <% else %>
        <li><%= link_to 'ログイン', new_user_session_path  %></li>
        <li><%= link_to 'サインアップ', new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>

<%= yield %>

  <footer>
    <small><p>&copy;Instant練習用アプリ</p></small>
  </footer>

</body>
</html>
